generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt String?
  updatedAt String?
  name      String?
  role      String?
  email     String?
  username  String?
  password  String?
  tasks     Task[]
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   String
  updatedAt   String
  title       String
  date        String
  description String
  creator     User     @relation(fields: [creatorId], references: [id])
  creatorId   String   @db.ObjectId
  order       Int
  content     String
  sources     String[]
}

model List {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   String
  updatedAt   String
  title       String
  description String
  order       Int
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId String?    @db.ObjectId
}

model Workspace {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   String
  updatedAt   String
  title       String
  description String
  list        List[]
}
